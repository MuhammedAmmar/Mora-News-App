<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/expandable_list_selector"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/list_header"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/normal_text_size"
            android:paddingStart="@dimen/normal_padding"
            android:paddingEnd="@dimen/normal_padding"
            android:paddingTop="@dimen/medium_padding"
            android:paddingBottom="@dimen/normal_padding"
            android:textColor="?colorOnPrimary"
            android:textStyle="bold"
            style="?android:attr/expandableListViewStyle" />

        <ImageView
            android:id="@+id/groupIndicator"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:contentDescription="@string/expandable_group_description"
            android:paddingStart="@dimen/normal_padding"
            android:paddingEnd="@dimen/normal_padding"
            android:paddingTop="@dimen/minimum_padding"
            android:paddingBottom="@dimen/normal_padding"/>
    </LinearLayout>
</layout>

